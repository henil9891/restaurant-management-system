	<script>
		var i = 0;

		$(document)
				.ready(
						function() {
							$(".bt-menu-trigger").toggle(function() {
								$('.bt-menu').addClass('bt-menu-open');
							}, function() {
								$('.bt-menu').removeClass('bt-menu-open');
							});

							$("#addBtn")
									.click(
											function() {
												i++;
												var row = "";
												var rowId = "row" + i;
												row += '<div id="'+rowId+'"><input type="text" placeholder="Menu Item"/> <input type="text" placeholder="Price"> </div><br>';
												$("#row" + (i - 1)).after(row);
											});
						})
	</script>
